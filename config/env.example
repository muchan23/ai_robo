# AI Robot プロジェクト - 環境変数設定例
# このファイルを .env にコピーして、実際の値を設定してください

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here

# 音声認識設定
WHISPER_MODEL=whisper-1
DEFAULT_LANGUAGE=ja

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 音声デバイス設定（ラズパイ用）
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default
SAMPLE_RATE=16000
CHUNK_SIZE=1024

# パフォーマンス設定
MAX_AUDIO_DURATION=30  # 最大録音時間（秒）
TIMEOUT_SECONDS=10     # API呼び出しタイムアウト（秒）
